                    <GridViewColumn Header="USDT->BTC"  Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate >
                                <TextBlock Name="text"  Text="{Binding AnalysisNumber4,StringFormat={}{0:N4}}" >
                                </TextBlock>
