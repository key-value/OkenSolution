                                        <Setter Property="TextBlock.Foreground" Value="Red" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate></GridViewColumn>

                </GridView>
            </ListView.View>
