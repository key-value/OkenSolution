                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate></GridViewColumn>
                    <GridViewColumn Header="BTC->ETH"  Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate >
                                <TextBlock Name="text"  Text="{Binding AnalysisNumber5,StringFormat={}{0:N4}}" >
